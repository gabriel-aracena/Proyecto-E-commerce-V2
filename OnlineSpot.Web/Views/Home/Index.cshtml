@{
    ViewData["Title"] = "Online Spot";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Banner -->
    <section class="bg-primary text-white text-center py-5">
        <div class="container">
            <h2 class="display-5 fw-bold mb-3">Bienvenido a la mejor tienda online</h2>
            <p class="lead mb-4">Descubre productos increíbles a precios irresistibles.</p>
            <a href="#productos" class="btn btn-light btn-lg fw-semibold">Explorar ahora</a>
        </div>
    </section>

    <!-- Categorías -->
    <section id="categorias" class="py-5">
        <div class="container">
            <h3 class="mb-4 fw-bold">Categorías destacadas</h3>

            <div class="row g-4">

                <div class="col-6 col-md-3">
                    <div class="card text-center align-items-center shadow-sm border-0">
                        <img src="./img/clothes.png" class="card-img-top p-3 w-50" alt="Ropa">
                        <div class="card-body">
                            <h5 class="card-title">Ropa</h5>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card text-center align-items-center shadow-sm border-0">
                        <img src="./img/tecnology.png" class="card-img-top p-3 w-50" alt="Tecnología">
                        <div class="card-body">
                            <h5 class="card-title">Tecnología</h5>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card text-center align-items-center shadow-sm border-0">
                        <img src="./img/home.png" class="card-img-top p-3 w-50" alt="Hogar">
                        <div class="card-body">
                            <h5 class="card-title">Hogar</h5>
                        </div>
                    </div>
                </div>

                <div class="col-6 col-md-3">
                    <div class="card text-center align-items-center shadow-sm border-0">
                        <img src="./img/Accesories.png" class="card-img-top p-3 w-50" alt="Accesorios">
                        <div class="card-body">
                            <h5 class="card-title">Accesorios</h5>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </section>

    <!-- Productos destacados -->
    <section id="productos" class="bg-white py-5 border-top">
        <div class="container">
            <h3 class="mb-4 fw-bold">Productos destacados</h3>
            <div class="row g-4">
                <div class="col-sm-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="https://via.placeholder.com/200" class="card-img-top" alt="Producto 1">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Producto 1</h5>
                            <p class="text-primary fw-bold">$25.99</p>
                            <button class="btn btn-primary mt-auto">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="https://via.placeholder.com/200" class="card-img-top" alt="Producto 2">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Producto 2</h5>
                            <p class="text-primary fw-bold">$45.00</p>
                            <button class="btn btn-primary mt-auto">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="https://via.placeholder.com/200" class="card-img-top" alt="Producto 3">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Producto 3</h5>
                            <p class="text-primary fw-bold">$32.50</p>
                            <button class="btn btn-primary mt-auto">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="https://via.placeholder.com/200" class="card-img-top" alt="Producto 4">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">Producto 4</h5>
                            <p class="text-primary fw-bold">$18.75</p>
                            <button class="btn btn-primary mt-auto">Agregar al carrito</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
