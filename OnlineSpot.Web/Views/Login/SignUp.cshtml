@model SaveUserViewModel

@{
    ViewData["Title"] = "Crear Cuenta";
    Layout = null;
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Crear cuenta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
        }

        .bg-auth {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        }

        .card {
            border: 0;
            box-shadow: 0 10px 30px rgba(0,0,0,.08);
        }

        .strength-bar {
            height: .5rem;
        }
    </style>
</head>
<body class="bg-auth d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <div class="text-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-person-plus text-primary" viewBox="0 0 16 16">
                        <path d="M8 7a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        <path d="M2 13s-1 0-1-1 1-4 7-4 7 3 7 4-1 1-1 1H2z" />
                        <path d="M13.5 5.5a.5.5 0 0 1 .5.5v1h1a.5.5 0 0 1 0 1h-1v1a.5.5 0 0 1-1 0V8h-1a.5.5 0 0 1 0-1h1V6a.5.5 0 0 1 .5-.5z" />
                    </svg>
                    <h1 class="h4 fw-semibold mt-2">Crear cuenta</h1>
                    <p class="text-secondary m-0">Regístrate para empezar</p>
                </div>

                <div class="card p-3 p-sm-4">

                    <!--Mostrar mensajes de TempData -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <!-- Fin mensajes TempData -->

                    <form id="registerForm" method="post" asp-controller="Login" asp-action="SignUp">
                        <div class="row g-3">

                            <input hidden asp-for="Id" class="form-control"/>
                            <input hidden asp-for="IsActive" class="form-control" />
                            <input hidden asp-for="Role" class="form-control" />

                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Nombre</label>
                                <input type="text" asp-for="Name" id="Name" class="form-control" placeholder="Tu nombre" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>


                            <div class="col-md-6">
                                <label asp-for="Lastname" class="form-label">Apellido</label>
                                <input type="text" asp-for="Lastname" id="lastName" class="form-control" placeholder="Tu apellido" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Email" class="form-label">Correo electrónico</label>
                                <input type="email" asp-for="Email" id="email" class="form-control" placeholder="tu@correo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Tel" class="form-label">Teléfono</label>
                                <input type="tel" asp-for="Tel" id="tel" class="form-control" placeholder="809-000-0000" />
                                <span asp-validation-for="Tel" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input type="text" asp-for="Username" id="Name" class="form-control" placeholder="Tu nombre" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>


                            <div class="col-12">
                                <label asp-for="Password" class="form-label">Contraseña</label>
                                <div class="input-group">
                                    <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Mínimo 6 caracteres" minlength="6" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ConfirmPassword" class="form-label">Confirmar contraseña</label>
                                <input type="password" asp-for="ConfirmPassword" id="confirm" class="form-control" placeholder="Repite la contraseña" minlength="6" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="col-12 d-flex justify-content-between align-items-center">
                                <small class="text-secondary">¿Ya tienes cuenta? <a asp-controller="Login" asp-action="SignIn">Inicia sesión</a></small>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary w-100" type="submit">Registrarme</button>
                            </div>
                        </div>
                    </form>
                </div>

                <p class="text-center text-body-tertiary small mt-3 mb-0">© <span id="year"></span> OnlineSpot</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
