@model LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesion";
    Layout = null;
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
        }
        .bg-auth {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        }
        .card {
            border: 0;
            box-shadow: 0 10px 30px rgba(0,0,0,.08);
        }
    </style>
</head>
<body class="bg-auth d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
                <div class="text-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-shield-lock text-primary" viewBox="0 0 16 16">
                        <path d="M5.5 9a1.5 1.5 0 0 1 3 0v1a1.5 1.5 0 0 1-3 0z" />
                        <path d="M8 0c-.69 0-1.316.234-1.908.465-.59.23-1.175.455-1.746.494C2.34 1.04 1 2.23 1 3.5V6c0 5.255 3.703 8.616 6.684 9.82a1.89 1.89 0 0 0 1.632 0C11.297 14.616 15 11.255 15 6V3.5c0-1.27-1.34-2.46-3.346-2.541-.57-.039-1.156-.264-1.746-.494C9.316.234 8.69 0 8 0zM2.5 3.5c0-.49.582-1.02 1.412-1.053.86-.037 1.608-.336 2.256-.586C6.761 1.61 7.362 1.375 8 1.375c.638 0 1.239.235 1.832.486.648.25 1.396.549 2.256.586.83.033 1.412.563 1.412 1.053V6c0 4.62-3.026 7.57-5.5 8.673C5.526 13.57 2.5 10.62 2.5 6z" />
                    </svg>
                    <h1 class="h4 fw-semibold mt-2">Iniciar sesión</h1>
                    <p class="text-secondary m-0">Accede a tu cuenta</p>
                </div>

                <div class="card p-3 p-sm-4">

                    <!--Mostrar mensajes de TempData -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Fin mensajes TempData -->
                    <form id="loginForm" method="post" asp-controller="Login" asp-action="SignIn">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nombre de Usuario</label>
                            <input type="text" asp-for="Username" class="form-control" placeholder="Introduce tu Nombre de Usuario" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Introduce tu Contraseña" minlength="6" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <a href="#" class="small">¿Olvidaste tu contraseña?</a>
                        </div>

                        <button class="btn btn-primary w-100" type="submit">Entrar</button>
                    </form>

                    <p class="text-center text-secondary mt-3 mb-0">
                        ¿No tienes cuenta? <a asp-controller="Login" asp-action="SignUp">Crear cuenta</a>
                    </p>
                </div>

                <p class="text-center text-body-tertiary small mt-3 mb-0">© <span id="year"></span> OnlineSpot</p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
