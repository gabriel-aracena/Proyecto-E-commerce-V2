<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineSpot.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="bg-white shadow-sm sticky-top">
        <div class="container py-3 d-flex justify-content-between align-items-center">
            <h1 class="h4 text-primary fw-bold">OnlineSpot</h1>
            <form class="d-flex w-50" role="search">
                <input class="form-control me-2" type="search" placeholder="Buscar productos..." aria-label="Buscar">
                <button class="btn btn-primary" type="submit">Buscar</button>
            </form>
            <nav class="d-none d-md-flex gap-3">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark fw-semibold p-2">Inicio</a>
                <a href="#productos" class="text-decoration-none text-dark fw-semibold p-2">Productos</a>
                <a asp-controller="Contact" asp-action="Index" class="text-decoration-none text-dark fw-semibold p-2">Contacto</a>
                <a asp-controller="Login" asp-action="SignIn" class="text-decoration-none text-light fw-semibold bg-primary p-2 rounded-3 ">Login</a>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-primary text-white text-center py-4 mt-5">
        <div class="container">
            <p class="mb-0">&copy; 2025 Online Spot. Todos los derechos reservados.</p>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
